<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textMissionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mission Title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textMissionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Loading..."
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnStartMission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="START MISSION"
        android:textColor="@android:color/white"
        android:backgroundTint="#4CAF50"
        android:textStyle="bold"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:textSize="16sp" />

    <!-- Start Navigation Button (initially hidden) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartNavigation"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="START NAVIGATION"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="#FF3B30"
        android:textSize="14sp"
        android:paddingHorizontal="20dp"
        android:visibility="gone"
        app:cornerRadius="24dp"
        app:elevation="4dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quests:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerQuests"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
