<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardReward"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Reward Icon -->
        <ImageView
            android:id="@+id/ivRewardIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_gift"
            android:background="@drawable/circle_background"
            android:padding="12dp"
            app:tint="@color/primary_color" />

        <!-- Reward Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvRewardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Reward"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvRewardDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Portachiavi Unisannio"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvRewardAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¬10 OFF"
                android:textSize="12sp"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvRewardStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVAILABLE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/success_color"
                android:background="@drawable/status_background_success"
                android:padding="6dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
