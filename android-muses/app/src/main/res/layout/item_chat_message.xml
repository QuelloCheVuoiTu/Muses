<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Messaggio dell'utente -->
    <LinearLayout
        android:id="@+id/userMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="end"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/userMessageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            app:cardBackgroundColor="@color/apple_blue"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp">

            <TextView
                android:id="@+id/userMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="260dp"
                android:padding="16dp"
                android:text="Messaggio utente"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Messaggio del bot -->
    <LinearLayout
        android:id="@+id/botMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="start"
        android:visibility="gone">

        <!-- Bot Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/success_green">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_chat"
                android:tint="#FFFFFF" />

        </androidx.cardview.widget.CardView>

        <!-- Bot Message Bubble -->
        <androidx.cardview.widget.CardView
            android:id="@+id/botMessageCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/surface_background"
            app:cardCornerRadius="18dp"
            app:cardElevation="1dp">

            <TextView
                android:id="@+id/botMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="260dp"
                android:padding="16dp"
                android:text="Risposta del bot"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                android:lineSpacingExtra="2dp"
                android:textIsSelectable="true" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
