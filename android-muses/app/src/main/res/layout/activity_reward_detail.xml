<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                app:tint="@color/primary_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reward Details"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:gravity="center"
                android:layout_marginEnd="24dp" />

        </LinearLayout>

        <!-- Reward Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Reward Icon -->
                <ImageView
                    android:id="@+id/ivRewardIcon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_gift"
                    android:background="@drawable/circle_background"
                    android:padding="20dp"
                    app:tint="@color/primary_color"
                    android:layout_marginBottom="16dp" />

                <!-- Reward Title -->
                <TextView
                    android:id="@+id/tvRewardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Portachiavi"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- Reward Status -->
                <TextView
                    android:id="@+id/tvRewardStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AVAILABLE"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/success_color"
                    android:background="@drawable/status_background_success"
                    android:padding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Reward Amount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Value:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/tvRewardAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¬10 OFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color" />

                </LinearLayout>

                <!-- Reward Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Type:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/tvRewardType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="flat"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text" />

                </LinearLayout>

                <!-- Museum -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Museum:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/secondary_text" />

                    <TextView
                        android:id="@+id/tvMuseumId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Museum: 68d26d73..."
                        android:textSize="14sp"
                        android:textColor="@color/primary_text"
                        android:gravity="end" />

                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvRewardDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Portachiavi Unisannio"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_marginBottom="32dp" />

                <!-- Use Reward Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUseReward"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Use Reward"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/modern_button_bg"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_gift"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textStart"
                    app:iconSize="20dp"
                    android:elevation="4dp" />

                <!-- QR Code Section (Initially Hidden) -->
                <LinearLayout
                    android:id="@+id/layoutQRSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/ios_gray4"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Scan this QR Code to use your reward:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:gravity="center"
                        android:layout_marginBottom="16dp" />

                    <ImageView
                        android:id="@+id/ivQRCode"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp" />



                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
