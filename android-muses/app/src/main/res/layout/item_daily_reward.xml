<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardDailyReward"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Day Info Section -->
        <LinearLayout
            android:id="@+id/dayInfoSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tvDayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LUN"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvDayNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color" />

        </LinearLayout>

        <!-- Reward Info Section -->
        <LinearLayout
            android:id="@+id/rewardInfoSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toEndOf="@id/dayInfoSection"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivRewardIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"
                app:tint="@color/accent_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tvRewardType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Punti Bonus"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:id="@+id/tvRewardValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+100"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/tvBasePoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000 punti"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/ivStatusIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:tint="@color/success_color" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>