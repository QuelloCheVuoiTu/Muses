<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Contenuto principale -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background"
        android:fitsSystemWindows="false"
        android:clipToPadding="false">

        <com.mapbox.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            mapbox:mapbox_compassGravity="bottom|end"
            mapbox:mapbox_compassMarginBottom="100dp"
            mapbox:mapbox_compassMarginRight="16dp"

            mapbox:mapbox_scaleBarGravity="bottom|end"
            mapbox:mapbox_scaleBarMarginBottom="8dp"
            mapbox:mapbox_scaleBarMarginLeft="16dp"
            mapbox:mapbox_scaleBarEnabled="true" />

        <!-- Container per i due widget affiancati -->
        <LinearLayout
            android:id="@+id/widgetsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Widget Meteo - metà sinistra -->
            <androidx.cardview.widget.CardView
                android:id="@+id/weatherWidget"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header meteo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/ivWeatherIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_sunny"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Meteo"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text" />

                        <ImageView
                            android:id="@+id/ivWeatherArrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:tint="@color/apple_blue" />

                    </LinearLayout>

                    <!-- Temperatura in grande -->
                    <TextView
                        android:id="@+id/tvTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="--°C"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:layout_marginBottom="8dp" />

                    <!-- Umidità sotto a sinistra -->
                    <TextView
                        android:id="@+id/tvHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Umidità: --%"
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Widget Preferenze - metà destra -->
            <androidx.cardview.widget.CardView
                android:id="@+id/preferencesWidget"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- Header preferenze -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/ivPreferencesIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_preferences"
                            android:layout_marginEnd="8dp"
                            android:tint="@color/apple_blue" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Preferenze"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text" />

                        <ImageView
                            android:id="@+id/ivPreferencesArrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:tint="@color/apple_blue" />

                    </LinearLayout>

                    <!-- Container preferenze scrollabile -->
                    <LinearLayout
                        android:id="@+id/preferencesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="4dp">

                        <!-- Placeholder per preferenze vuote -->
                        <TextView
                            android:id="@+id/tvNoPreferences"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nessuna preferenza"
                            android:textSize="12sp"
                            android:textColor="@color/secondary_text"
                            android:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Widget Missioni -->
        <androidx.cardview.widget.CardView
            android:id="@+id/missionWidget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/widgetsContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Icona missione -->
                <ImageView
                    android:id="@+id/ivMissionIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_missions"
                    android:layout_marginEnd="12dp"
                    android:tint="@color/apple_blue" />

                <!-- Container info missione -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Nome missione -->
                    <TextView
                        android:id="@+id/tvMissionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Caricamento..."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text" />

                    <!-- Descrizione/Progress -->
                    <TextView
                        android:id="@+id/tvMissionProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/secondary_text" />

                </LinearLayout>

                <!-- Freccia per aprire pagina missioni -->
                <ImageView
                    android:id="@+id/ivMissionArrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:tint="@color/apple_blue"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Pulsante Menu in basso a sinistra -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMenu"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="34dp"
            android:src="@drawable/ic_menu"
            android:backgroundTint="#007AFF"
            app:borderWidth="0dp"
            app:elevation="8dp"
            app:pressedTranslationZ="12dp"
            app:tint="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Stop Navigation Button (initially hidden) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fabStopNavigation"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="38dp"
            android:minWidth="120dp"
            android:maxWidth="160dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="STOP NAVIGATION"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            android:backgroundTint="#FF3B30"
            android:visibility="gone"
            android:ellipsize="end"
            android:maxLines="1"
            app:cornerRadius="24dp"
            app:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/fabMenu"
            app:layout_constraintEnd_toStartOf="@id/fabChat"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- FAB Chat esistente -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabChat"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="34dp"
            android:src="@drawable/ic_chat"
            android:backgroundTint="#007AFF"
            app:borderWidth="0dp"
            app:elevation="8dp"
            app:pressedTranslationZ="12dp"
            app:tint="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Chat Container esistente -->
        <androidx.cardview.widget.CardView
            android:id="@+id/chatContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            android:translationZ="24dp"
            android:elevation="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Header Chat esistente -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/card_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chat"
                        android:textColor="@color/primary_text"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <ImageButton
                        android:id="@+id/btnCloseChat"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ios_close_button_bg"
                        android:src="@drawable/ic_close"
                        android:scaleType="centerInside"
                        app:tint="#8E8E93" />

                </LinearLayout>

                <!-- Separatore sottile -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/ios_separator"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <!-- Lista messaggi -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewMessages"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:clipToPadding="false" />

                <ProgressBar
                    android:id="@+id/progressBarThinking"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:indeterminateTint="#007AFF"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Input messaggio esistente -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/card_background"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="@color/input_background"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">

                        <EditText
                            android:id="@+id/editTextMessage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="Messaggio"
                            android:textColorHint="@color/input_hint"
                            android:textColor="@color/primary_text"
                            android:textSize="16sp"
                            android:maxLines="4"
                            android:minHeight="36dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:fontFamily="sans-serif" />

                    </androidx.cardview.widget.CardView>

                    <ImageButton
                        android:id="@+id/btnSendMessage"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/ios_send_button_bg"
                        android:src="@drawable/ic_send"
                        android:scaleType="centerInside"
                        app:tint="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Museum Detail Card -->
        <include layout="@layout/museum_detail_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Vehicle Detail Card -->
        <include layout="@layout/vehicle_detail_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        android:elevation="16dp"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        app:itemBackground="?attr/selectableItemBackground" />

</androidx.drawerlayout.widget.DrawerLayout>