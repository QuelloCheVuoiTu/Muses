<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Modern Artwork Image Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/border_color"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/artworkImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Artwork image" />

            <!-- Image Overlay for Better Text Visibility -->
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:background="@drawable/image_overlay_gradient"
                android:alpha="0.7" />

        </androidx.cardview.widget.CardView>

        <!-- Artwork Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <!-- Artwork Name -->
            <TextView
                android:id="@+id/artworkName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingMultiplier="1.2"
                tools:text="The Starry Night" />

            <!-- Artwork Description -->
            <TextView
                android:id="@+id/artworkDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/secondary_text"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.3"
                android:fontFamily="sans-serif"
                tools:text="A famous painting depicting a swirling night sky over a village, created by Vincent van Gogh in 1889." />

            <!-- Modern Exposure Status -->
            <androidx.cardview.widget.CardView
                android:id="@+id/exposureStatusCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/border_color"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/exposureStatusLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <View
                        android:id="@+id/exposureIndicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/circle_indicator" />

                    <TextView
                        android:id="@+id/exposureStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:fontFamily="sans-serif-medium"
                        tools:text="On Display" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Action Indicator -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_arrow_forward_ios"
            android:alpha="0.3"
            app:tint="@color/secondary_text" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
