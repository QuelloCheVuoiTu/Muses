<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ============================================= -->
    <!-- TEMA SCURO MUSES -->
    <!-- ============================================= -->
    
    <!-- Base application theme per modalitÃ  scura -->
    <style name="Theme.Muses" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colori primari -->
        <item name="colorPrimary">@color/apple_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/md_theme_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/apple_blue_light</item>

        <!-- Colori secondari -->
        <item name="colorSecondary">@color/apple_blue_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/surface_background</item>
        <item name="colorOnSecondaryContainer">@color/apple_blue_light</item>

        <!-- Colori di superficie e sfondo -->
        <item name="colorSurface">@color/surface_background</item>
        <item name="colorOnSurface">@color/ios_text_primary</item>
        <item name="colorSurfaceVariant">@color/elevated_surface</item>
        <item name="colorOnSurfaceVariant">@color/ios_text_secondary</item>
        
        <item name="android:colorBackground">@color/ios_background</item>
        <item name="colorOnBackground">@color/ios_text_primary</item>

        <!-- Colori di outline e separatori -->
        <item name="colorOutline">@color/ios_separator</item>
        <item name="colorOutlineVariant">@color/ios_separator_opaque</item>

        <!-- Status bar e navigation bar scure -->
        <item name="android:statusBarColor">@color/ios_background</item>
        <item name="android:navigationBarColor">@color/ios_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Window flags per display moderni -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        
        <!-- Colore del testo sui controlli -->
        <item name="android:textColorPrimary">@color/ios_text_primary</item>
        <item name="android:textColorSecondary">@color/ios_text_secondary</item>
        <item name="android:textColorTertiary">@color/ios_text_tertiary</item>
        
        <!-- Colore degli hint -->
        <item name="android:textColorHint">@color/input_hint</item>
        
        <!-- ActionBar scura -->
        <item name="actionBarStyle">@style/Widget.Muses.ActionBar.Dark</item>
    </style>

    <!-- Theme per activity senza ActionBar -->
    <style name="Theme.Muses.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colori primari -->
        <item name="colorPrimary">@color/apple_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/md_theme_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/apple_blue_light</item>

        <!-- Colori secondari -->
        <item name="colorSecondary">@color/apple_blue_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/surface_background</item>
        <item name="colorOnSecondaryContainer">@color/apple_blue_light</item>

        <!-- Colori di superficie e sfondo -->
        <item name="colorSurface">@color/surface_background</item>
        <item name="colorOnSurface">@color/ios_text_primary</item>
        <item name="colorSurfaceVariant">@color/elevated_surface</item>
        <item name="colorOnSurfaceVariant">@color/ios_text_secondary</item>
        
        <item name="android:colorBackground">@color/ios_background</item>
        <item name="colorOnBackground">@color/ios_text_primary</item>

        <!-- Colori di outline e separatori -->
        <item name="colorOutline">@color/ios_separator</item>
        <item name="colorOutlineVariant">@color/ios_separator_opaque</item>

        <!-- Status bar e navigation bar scure -->
        <item name="android:statusBarColor">@color/ios_background</item>
        <item name="android:navigationBarColor">@color/ios_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Window flags per display moderni -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        
        <!-- Colore del testo sui controlli -->
        <item name="android:textColorPrimary">@color/ios_text_primary</item>
        <item name="android:textColorSecondary">@color/ios_text_secondary</item>
        <item name="android:textColorTertiary">@color/ios_text_tertiary</item>
        
        <!-- Colore degli hint -->
        <item name="android:textColorHint">@color/input_hint</item>
    </style>

    <!-- Stile ActionBar per tema scuro -->
    <style name="Widget.Muses.ActionBar.Dark" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="android:background">@color/surface_background</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Muses.ActionBar.Title.Dark</item>
        <item name="android:subtitleTextStyle">@style/TextAppearance.Muses.ActionBar.Subtitle.Dark</item>
    </style>

    <!-- Stili per testo ActionBar scura -->
    <style name="TextAppearance.Muses.ActionBar.Title.Dark" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/ios_text_primary</item>
    </style>

    <style name="TextAppearance.Muses.ActionBar.Subtitle.Dark" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/ios_text_secondary</item>
    </style>

    <!-- Stile per Dialog tema scuro -->
    <style name="Theme.Muses.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/apple_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/ios_text_primary</item>
        <item name="android:colorBackground">@color/surface_background</item>
        <item name="colorSurface">@color/surface_background</item>
        <item name="colorOnSurface">@color/ios_text_primary</item>
    </style>
</resources>